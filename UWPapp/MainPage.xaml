<Page
    x:Class="UWPapp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPapp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="10,30,0,0">
            <SplitView Name="splitview" DisplayMode="CompactInline" OpenPaneLength="80" CompactPaneLength="50">
                <SplitView.Content>
                    <StackPanel>
                        <TextBlock Text="first"/>
                        <TextBlock Text="second"/>
                        <TextBlock Text="third"/>
                    </StackPanel>
                </SplitView.Content>
                <SplitView.Pane>
                    <StackPanel>
                        <TextBlock Text="forth"/>
                        <TextBlock Text="fifth"/>
                        <TextBlock Text="sixth"/>
                    </StackPanel>
                </SplitView.Pane>
            </SplitView>
            <Button Name="btn" Content="Click Me" Click="btn_Click"/>
        </StackPanel>
    </Grid>
</Page>
